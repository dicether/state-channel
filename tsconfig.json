{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,

    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitThis": true,
    "allowJs": false,
    "paths": {
        "*": ["./typings/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
